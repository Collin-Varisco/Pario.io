    <!-- Handlebars Templates -->
    <script id="template-tweet" type="text/x-handlebars-template">

        <div class="tweet" id="{{_id}}">
            <img src="images/place.png" style="width: 60px; height: 60px;">

            <div class="body">
                <div class="title">{{ Author }}</div>
                <div class="message">{{ Post_Content }}</div>
            </div>
        </div>
    </script>

    <script id="template-compose" type="text/x-handlebars-template">
